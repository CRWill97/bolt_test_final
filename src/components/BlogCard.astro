---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
}

const { title, description, date, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
  <a href={`/blog/${slug}`} class="block p-6">
    <time class="text-sm text-gray-500">{date}</time>
    <h2 class="mt-2 text-xl font-semibold text-tech-primary hover:text-tech-accent">{title}</h2>
    <p class="mt-3 text-gray-600">{description}</p>
    <div class="mt-4 flex items-center text-tech-accent">
      <span>Read more</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </div>
  </a>
</article>