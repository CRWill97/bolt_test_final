---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI Tech Blog - Latest insights in artificial intelligence" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 text-tech-primary">
    <nav class="border-b bg-white sticky top-0 z-10">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <a href="/" class="text-2xl font-bold text-tech-accent">AI Insights</a>
          <div class="flex space-x-8">
            <a href="/blog" class="text-gray-700 hover:text-tech-accent">Blog</a>
            <a href="/about" class="text-gray-700 hover:text-tech-accent">About</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-white border-t mt-16">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-center text-gray-500">Â© 2024 AI Insights. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', sans-serif;
  }
</style>